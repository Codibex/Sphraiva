FROM mcr.microsoft.com/dotnet/sdk:8.0
RUN apt-get update && apt-get install -y git openssh-client ca-certificates \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /workspace

RUN git config --global agent.sphraiva "Agent Sphraiva" && git config --global user.email "agent@Sphraiva.com"

CMD ["tail", "-f", "/dev/null"]